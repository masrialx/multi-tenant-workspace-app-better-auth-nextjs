# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/workspace_db"

# ============================================
# Better Auth Configuration
# ============================================
# Your application URL (use http://localhost:3000 for local development)
BETTER_AUTH_URL="http://localhost:3000"

# Secret key for authentication (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BETTER_AUTH_SECRET="your-secret-key-min-32-chars-long-please-change-this"

# Trust host header (set to "true" for production deployments)
# BETTER_AUTH_TRUST_HOST="true"

# ============================================
# SMTP Email Configuration (Optional)
# ============================================
# Required for email features (verification, password reset, invitations)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="your-email@gmail.com"


ENABLE_EMAIL_SERVICE="true"
NEXT_PUBLIC_ENABLE_EMAIL_SERVICE="true"



# ============================================
# Optional SMTP Advanced Configuration
# ============================================
# Connection timeout in milliseconds (default: 30000 for production, 10000 for dev)
# SMTP_CONNECTION_TIMEOUT="30000"

# Send timeout in milliseconds (default: 30000 for production, 15000 for dev)
# SMTP_SEND_TIMEOUT="30000"

# Maximum retry attempts (default: 2 for production, 1 for dev)
# SMTP_MAX_RETRIES="2"

# Reject unauthorized TLS certificates (default: true)
# Set to "false" if you have certificate issues
# SMTP_REJECT_UNAUTHORIZED="true"

# ============================================
# Platform Detection (Auto-detected)
# ============================================
# The app automatically detects serverless environments (Render, Vercel, AWS Lambda)
# You can explicitly set these if needed:
# RENDER="true"
# VERCEL="1"
# NODE_ENV="production"
